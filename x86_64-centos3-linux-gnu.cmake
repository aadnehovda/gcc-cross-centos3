cmake_minimum_required( VERSION 3.5 )
set( CMAKE_SYSTEM_NAME Linux )
set( CMAKE_SYSTEM_PROCESSOR x86_64 )
get_filename_component( platform ${CMAKE_CURRENT_LIST_FILE} NAME_WE )

set( CMAKE_C_COMPILER "${CMAKE_CURRENT_LIST_DIR}/bin/${platform}-gcc" )
set( CMAKE_CXX_COMPILER "${CMAKE_CURRENT_LIST_DIR}/bin/${platform}-g++" )
set( CMAKE_SYSROOT "${CMAKE_CURRENT_LIST_DIR}/${platform}/sys-root" )
set( FIND_LIBRARY_USE_LIB64_PATHS ON )
set( CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER )
set( CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY )
set( CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY )
set( CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY )